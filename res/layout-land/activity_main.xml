<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/MainWokeUp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/MainGoingToBed"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.Large"
        android:text="Woke Up" />

    <Button
        android:id="@+id/manualForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/RelationshipSurveyButton"
        android:text="Manual Entry" />


    <Button
        android:id="@+id/MainGoingToBed"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/MainWokeUp"
        android:layout_alignParentTop="true"
        style="@android:style/TextAppearance.Large"
        android:text="Going to Bed" />

    <Button
        android:id="@+id/TakeSurveys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="How Do You Feel?" />

    <Button
        android:id="@+id/SleepinessSurveyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/TakeSurveys"
        android:text="Sleepiness Survey" />

    <Button
        android:id="@+id/RelationshipSurveyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/SleepinessSurveyButton"
        android:text="Relationship Survey" />

</RelativeLayout>